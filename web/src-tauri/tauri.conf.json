{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SlowClaw Social",
  "version": "0.1.0",
  "identifier": "social.slowclaw.mobile",
  "build": {
    "beforeDevCommand": "npm run dev:tauri",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:tauri",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "SlowClaw Social",
        "width": 420,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "capabilities": [
        "default",
        "sidecar-runtime"
      ],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../pb_migrations"
    ],
    "externalBin": [
      "binaries/pocketbase",
      "binaries/slowclaw"
    ]
  },
  "plugins": {
    "shell": {}
  }
}
