{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "sidecar-runtime",
  "description": "Desktop runtime orchestration for bundled sidecars.",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "pocketbase",
          "sidecar": true
        },
        {
          "name": "slowclaw",
          "sidecar": true
        }
      ]
    }
  ]
}
